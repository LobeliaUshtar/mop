<%= bootstrap_form_for(@inventory) do |f| %>
  <%= render "shared/errors", object: @inventory %>
  <fieldset>
    <%= f.text_field :name, autofocus: true %>
    <%= f.number_field :count %>
    <h5>Shop</h5>
    <%= f.form_group :shop do %>
      <%= f.radio_button :shop, 1, label: "1", inline: true %>
      <%= f.radio_button :shop, 2, label: "2", inline: true %>
      <%= f.radio_button :shop, 3, label: "3", inline: true %>
      <%= f.radio_button :shop, 4, label: "4", inline: true %>
      <%= f.radio_button :shop, 5, label: "5", inline: true %>
      <%= f.radio_button :shop, 6, label: "6", inline: true %>
      <%= f.radio_button :shop, 7, label: "7", inline: true %>
      <%= f.radio_button :shop, 8, label: "8", inline: true %>
    <% end %>
    <h5>Category</h5>
    <%= f.collection_radio_buttons(:category_ids, Category.all, :id, :name, hide_label: true, inline: true) %>
    <% if @inventory.new_record? %>
      <%= f.submit "Create", class: 'btn btn-success' %>
    <% else %>
      <%= f.submit "Update", class: 'btn btn-success' %>
    <% end %>
    <%= link_to "Cancel", inventories_path, class: 'btn btn-warning' %>
  </fieldset>
<% end %>