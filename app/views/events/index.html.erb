<h1><%= pluralize(@events.size, 'Events') %></h1>

<% @events.each do |event| %>
  <article>
    <header>
      <h2><%= link_to event.title, event %></h2>
    </header>
    <p>
      <%= truncate(event.details, length: 40, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Happening:</th>
        <td><%= event.date_start %> through <%= event.date_end %></td>
      </tr>
    </table>
  </article>
<% end %>
