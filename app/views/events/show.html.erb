<% content_for(:title, @event.title) %>

<article>
  <header>
    <h1><%= @event.title %></h1>
  </header>
  <p>
    <%= @event.details %>
  </p>
  <h3>Dates</h3>
  <p>
    <%= @event.date_start %> through <%= @event.date_end %>
  </p>
  <nav>
    <% if current_user_admin? %>
      <%= link_to "Edit Event", edit_event_path(@event), class: 'btn btn-warning' %>
      <%= link_to "Delete Event", event_path(@event), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to permanently delete your account?' } %>
    <% end %>
  </nav>
</article>