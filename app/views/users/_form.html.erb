<%= bootstrap_form_for(@user) do |f| %>
  <%= render "shared/errors", object: @user %>
  <fieldset>
    <%= f.text_field :name, autofocus: true %>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation, label: "Confirm Password" %>
    <%= f.text_field :address %>
    <%= f.text_field :phone, label: "Phone Number" %>
    <%= f.text_area :availability_notes, label: "When are you available?" %>
    <% if current_user_admin? %>
      <%= f.check_box :admin, label: 'Admin?' %>
      <%= f.check_box :approved, label: 'Approved?' %>
    <% end %>
    <% if @user.new_record? %>
      <%= f.submit "Create Account", class: 'btn btn-success' %>
    <% else %>
      <%= f.submit "Update Account", class: 'btn btn-success' %>
    <% end %>
    <%= link_to "Cancel", users_path, class: 'btn btn-warning' %>
  </fieldset>
<% end %>