<div>
  <div class='col-md-9'>Mount Olive Pantry {site still in the works}</div>
  
  <% if current_user %>
    <div class="btn-group">
      <button type="button" class="btn btn-info">
        <%= current_user.name %>
      </button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Edit Account", edit_user_path(current_user) %></li>
        <li><%= link_to "Delete Account", user_path(current_user), method: :delete, data: { confirm: 'Are you sure?' } %></li>
        <li class="divider"></li>
        <li><%= link_to 'Sign Out', session_path, method: :delete %></li>
      </ul>
    </div>
  <% else %>
    <%= link_to 'Become a Volunteer', signup_path, class: 'btn btn-primary' %>
    <%= link_to 'Volunteer Sign In', signin_path, class: 'btn btn-primary' %>
  <% end %>
</div>