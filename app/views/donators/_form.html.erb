<%= bootstrap_form_for(@donator) do |f| %>
  <%= render "shared/errors", object: @donator %>
  <fieldset>
    <%= f.text_field :name, autofocus: true %>
    <%= f.text_field :website %>
    <%= f.text_area :description, rows: 2 %>
    <%= f.text_field :logo_file_name, placeholder: "GIF, JPG, or PNG file name" %>
    <% if current_user_admin? %>
      <%= f.check_box :current, label: 'Current Donator?' %>
    <% end %>
    <%= f.submit(class: 'btn btn-success') %>
    <%= link_to "Cancel", users_path, class: 'btn btn-warning' %>
  </fieldset>
<% end %>