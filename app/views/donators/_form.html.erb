<%= bootstrap_form_for(@donator) do |f| %>
  <%= render "shared/errors", object: @donator %>
  <fieldset>
    <%= f.text_field :name, autofocus: true %>
    <%= f.text_field :website %>
    <%= f.email_field :email %>
    <%= f.text_field :donation %>
    <%= f.text_area :description, rows: 3 %>
    <%= f.text_field :address %>
    <%= f.text_field :phone %>
    <%= f.text_field :logo_link, placeholder: "GIF, JPG, or PNG file name" %>
    <% if current_user_admin? %>
      <%= f.check_box :current, label: 'Current Donator?' %>
    <% end %>
    <%= f.submit(class: 'btn btn-success') %>
    <%= link_to "Cancel", donators_path, class: 'btn btn-warning' %>
  </fieldset>
<% end %>